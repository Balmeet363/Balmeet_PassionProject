
@model  List<BalmeetPassion_Project.Models.poetry>
@{
    ViewBag.Title = "Add";
}
<!-- Add comment form-->
<h2>Add Comment</h2>
<div>
    <a  href="/Comments/List">Back to List</a>
</div>
<form method="POST" action="/Comments/Add">
   
    <div><span>Comment:</span><input id="Comment" type="text" name="Comment" /></div>
    <div>
        <span>Poetries</span>
        <select id="poetryID" type="text" name="poetryID">
            @{
                
                foreach (var poetries in Model)
                {
                    <option value="@poetries.poetryID">@poetries.poetryName</option>

                }
            }
        </select>
    </div>

    <div class="inpfield">
        <input type="submit" value="Add Comment">
    </div>
</form>

